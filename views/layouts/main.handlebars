        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body>
    {{{body}}}
</body>
<script>
    Array.from(document.getElementsByClassName("development")).forEach(element => element.classList.add("bg-yellow-500"));

    Array.from(document.getElementsByClassName("staging")).forEach(element => element.classList.add("bg-blue-500"));

    Array.from(document.getElementsByClassName("production")).forEach(element => element.classList.add("bg-green-500"));
</script>
