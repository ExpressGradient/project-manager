<h1 class="text-3xl font-bold text-center mt-4">Create a New Project</h1>

<form action="/new" method="post" class="flex flex-col gap-y-3 m-4 p-4 rounded shadow md:w-1/3 md:mx-auto">
    <label class="font-semibold" for="title">Project Title</label>
    <input type="text" id="title" name="title" required class="p-3 border-2 border-black rounded" maxLength="30" />

    <label class="font-semibold" for="description" id="description">Project Description</label>
    <textarea id="description" name="description" required class="p-3 border-2 border-black rounded" maxLength="100"></textarea>

    <label class="font-semibold" for="stage">Project Stage</label>
    <select id="stage" name="stage" required class="p-3 border-2 border-black rounded">
        <option value="development">Development</option>
        <option value="staging">Staging</option>
        <option value="production">Production</option>
    </select>

    <button type="submit" class="p-3 text-white text-lg font-semibold rounded bg-purple-600">Submit</button>
</form>